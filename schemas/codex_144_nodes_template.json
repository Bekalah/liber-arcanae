{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://liber-arcanae.local/schemas/codex_144_nodes_template.json",
  "title": "Codex 144:99 Node Specification",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "name",
      "type",
      "numerology",
      "lore",
      "links",
      "provenance"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[0-9a-z-]+$"
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "type": {
        "type": "string",
        "minLength": 1
      },
      "numerology": {
        "type": "integer",
        "minimum": 0
      },
      "lore": {
        "type": "string",
        "minLength": 1
      },
      "art": {
        "type": "string",
        "pattern": "^$|\\.(?:png|jpg|jpeg|webp|avif)$"
      },
      "lab": {
        "type": "string"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "uniqueItems": true
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "uniqueItems": true
      },
      "provenance": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "updated": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      }
    }
  }
}
